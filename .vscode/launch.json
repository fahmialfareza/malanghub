  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run pnpm dev",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Go Backend",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "cwd": "${workspaceFolder}/apps/backend",
      "program": "${workspaceFolder}/apps/backend/main.go",
      "envFile": "${workspaceFolder}/apps/backend/.env"
    }
  ]
}
